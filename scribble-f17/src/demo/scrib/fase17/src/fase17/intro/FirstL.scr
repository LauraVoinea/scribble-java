module demo.fase17.intro.FirstL;


global protocol P1(role A, role B, role C)
{
	rec X
	{
		choice at A
		{
			1() from A to B;
		}
		or
		{
			2() from A to C;
		}
		continue X;  // Refactor inside choice for f17 "core" syntax
	}
}


global protocol P1a(role A, role B, role C)
{
	rec X
	{
		choice at A
		{
			1() from A to B;
			continue X;
		}
		or
		{
			2() from A to C;
			continue X;
		}
	}
}
